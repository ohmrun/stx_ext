package stx.core.head;

class Maybes extends Clazz{
  static public var _(default,null) = new stx.core.body.Maybes();

  static public inline function unit<T>():Maybe<T>{
    return new Maybe(null);
  }
  static public inline function pure<T>(v:T):Maybe<T>{
    return new Maybe(v);
  }
  static public inline function flatten<A>(v:Maybe<Maybe<A>>):Maybe<A>{
    return switch(v){
      case null : null;
      default   : v.prj();
    }
  }
}